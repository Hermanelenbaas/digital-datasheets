{
    "$id": "https://github.com/chromeos/digital-datasheets/blob/main/part-spec/sensor.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "sensor",
    "oneOf": [
        {
            "title": "level shifter",
            "type": "object",
            "required": [
                "manufacturer",
                "mpn",
                "datasheetVersion"
            ],
            "properties": {
                "manufacturer": {
                    "description": "company that manufacturers the part",
                    "type": "string"
                },
                "mpn": {
                    "description": "manufacturer part number",
                    "type": "string"
                },
                "datasheetVersion": {
                    "description": "datasheet version encoded in this document",
                    "type": "string"
                },
                "eolDate": {
                    "description": "date this part will no longer be supported by manufacturer",
                    "type": "string",
                    "format": "date"
                },
                "numberChannels": {
                    "description": "number of lanes (single ended or differential) supported by redriver",
                    "type": "number"
                },
                "interface": {
                    "description": "interface supported by redriver",
                    "examples": [
                        "hdmi1.4",
                        "hdmi2.0",
                        "etc."
                    ],
                    "type": "string"
                },
                "inputVoltage": {
                    "description": "input voltage level of level shifter",
                    "comment": "units of volts",
                    "type": "number"
                },
                "outputVoltage": {
                    "description": "output voltage level of level shifter",
                    "comment": "units of volts",
                    "type": "number"
                },
                "rohs": {
                    "description": "whether a part is rohs compliant",
                    "type": "string",
                    "enum": [
                        "yes",
                        "no"
                    ]
                },
                "automotive": {
                    "description": "whether a part is automotive qualified",
                    "type": "string",
                    "enum": [
                        "yes",
                        "no"
                    ]
                },
                "pins": {
                    "description": "array of pin objects with associated properties",
                    "type": "array",
                    "items": {
                        "$ref": "definitions.json#/pinSpec"
                    }
                }
            }
        },
        {
            "title": "accelerometer",
            "type": "object",
            "required": [
                "manufacturer",
                "mpn",
                "datasheetVersion"
            ],
            "properties": {
                "manufacturer": {
                    "description": "company that manufacturers the part",
                    "type": "string"
                },
                "mpn": {
                    "description": "manufacturer part number",
                    "type": "string"
                },
                "datasheetVersion": {
                    "description": "datasheet version encoded in this document",
                    "type": "string"
                },
                "eolDate": {
                    "description": "date this part will no longer be supported by manufacturer",
                    "type": "string",
                    "format": "date"
                },
                "accelerationRanges": {
                    "description": "range of force that accelerometer can measure",
                    "examples": [
                        "[2",
                        "4",
                        "8",
                        "16]"
                    ],
                    "comment": "units of g",
                    "type": "number"
                },
                "sensitivity": {
                    "description": "smallest change in force accelerometer is able to capture (typical). Corresponds to levels in acceleration ranges",
                    "examples": [
                        "[16000",
                        "8000",
                        "4000",
                        "2000]"
                    ],
                    "comment": "units of LSB/g",
                    "type": "number"
                },
                "axis": {
                    "description": "number of axes of acceleration measurement",
                    "type": "number"
                },
                "interface": {
                    "description": "interface(s) for communication to host",
                    "examples": [
                        "[i2c",
                        "spi",
                        "analog]"
                    ],
                    "type": "string"
                },
                "bandwidth": {
                    "description": "bandwidth of acceleration measurement",
                    "comment": "units of Hz",
                    "type": "number"
                },
                "softwareVersion": {
                    "description": "software version of the part",
                    "type": "string"
                },
                "firmwareVersion": {
                    "description": "firmware version of the part",
                    "type": "string"
                },
                "rohs": {
                    "description": "whether a part is rohs compliant",
                    "type": "string",
                    "enum": [
                        "yes",
                        "no"
                    ]
                },
                "automotive": {
                    "description": "whether a part is automotive qualified",
                    "type": "string",
                    "enum": [
                        "yes",
                        "no"
                    ]
                },
                "pins": {
                    "description": "array of pin objects with associated properties",
                    "type": "array",
                    "items": {
                        "$ref": "definitions.json#/pinSpec"
                    }
                }
            }
        },
